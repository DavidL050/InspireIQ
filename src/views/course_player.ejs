<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= course.name %> - InspireIQ</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>

<body class="bg-dark text-white">
    <header>
        <%- include('partials/navigation') %>
    </header>

    <div class="player-container">
        <div class="player-content">
            <!-- Video Section -->
            <div class="player-video-section">
                <div class="player-video-wrapper">
                    <% if (sections.length > 0 && sections[0].video_url.includes("http")) { %>
                        <iframe src="<%= sections[0].video_url %>" title="<%= course.name %> video"
                            frameborder="0"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                            allowfullscreen>
                        </iframe>
                    <% } else { %>
                        <p>No hay videos disponibles para este curso o el enlace no es válido.</p>
                    <% } %>
                </div>

                <!-- Detalles del curso -->
                <div class="mt-4">
                    <h2 class="player-course-title"><%= course.name %></h2>
                    <p class="player-course-description"><%= course.description %></p>
                    <p><strong>Fecha de creación:</strong> <%= new Date(course.creation_date).toLocaleDateString() %></p>
                    <p><strong>Idioma:</strong> <%= course.language %></p>
                </div>

                <!-- Sección de valoraciones -->
                <div class="mt-5">
                    <h3>Valoraciones</h3>
                    <% if (ratings.length > 0) { %>
                        <% ratings.forEach((rating) => { %>
                            <div class="card mb-3">
                                <div class="card-body">
                                    <p><strong>Calificación:</strong> <%= rating.rating %> estrellas</p>
                                    <p><strong>Comentario:</strong> <%= rating.comment %></p>
                                    <p><small><strong>Fecha:</strong> <%= new Date(rating.created_at).toLocaleDateString() %></small></p>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <p>No hay valoraciones para este curso todavía.</p>
                    <% } %>
                </div>
            </div>

            <!-- Course Content Sidebar -->
            <div class="player-sidebar">
                <div class="player-sidebar-header">
                    <h5>Contenido del curso</h5>
                    <button type="button" class="player-close-btn">&times;</button>
                </div>

                <div class="player-accordion" id="courseAccordion">
                    <% sections.forEach((section, index) => { %>
                        <div class="player-accordion-item mb-2">
                            <h2 class="player-accordion-header">
                                <button class="player-accordion-button" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#section<%= index %>">
                                    <%= section.title %> <span class="player-duration">45min</span>
                                </button>
                            </h2>
                            <div id="section<%= index %>" class="player-accordion-collapse collapse">
                                <div class="player-accordion-body">
                                    <a href="<%= section.video_url %>" class="btn btn-primary btn-sm" target="_blank">Ver video</a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <%- include('partials/footer') %>
</body>

</html>
