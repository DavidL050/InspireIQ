<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>InspireIQ - Crear Curso</title>
    <link rel="icon" href="https://i.ibb.co/g66kBGP/Logo.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('partials/navigation') %>
    
    <div class="main-content">
        <div class="container py-4">
            <!-- Mostrar mensajes flash solo si contienen texto -->
            <% if (successMessage && successMessage.length > 0) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <%= successMessage %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>

            <% if (errorMessage && errorMessage.length > 0) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= errorMessage %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>

            <h1 class="mt-3 mb-4 text-center">Crear Nuevo Curso</h1>

            <!-- Formulario para crear curso -->
            <form action="/create_course" method="POST" class="mx-auto" style="max-width: 800px;">
                <div class="row mb-3">
                    <div class="col">
                        <label for="name" class="form-label required">Nombre del Curso</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        <label for="description" class="form-label required">Descripción</label>
                        <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="language" class="form-label required">Idioma</label>
                        <select class="form-select" id="language" name="language" required>
                            <option value="">Seleccionar idioma</option>
                            <option value="es">Español</option>
                            <option value="en">Inglés</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label for="cover_image" class="form-label">URL de la Imagen de Portada</label>
                        <input type="url" class="form-control" id="cover_image" name="cover_image" placeholder="https://example.com/imagen.jpg">
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-12">
                        <label for="category" class="form-label required">Categoría</label>
                        <select class="form-select" id="category" name="category" required>
                            <option value="">Seleccionar categoría</option>
                            <% categories.forEach(category => { %>
                                <option value="<%= category.category_id %>"><%= category.name %></option>
                            <% }); %>
                        </select>
                    </div>
                </div>

                <!-- Requerimientos del curso -->
                <div class="row mb-3">
                    <div class="col">
                        <h3>Requerimientos del Curso</h3>
                        <div id="requirements" class="mb-3">
                            <input type="text" class="form-control mb-2" name="requirements[]" placeholder="Agregar requerimiento">
                        </div>
                        <button type="button" class="btn btn-outline-secondary" onclick="addRequirement()">Agregar otro requerimiento</button>
                    </div>
                </div>

                <!-- Secciones del curso -->
                <div class="row mb-3">
                    <div class="col">
                        <h3>Secciones del Curso</h3>
                        <div id="sections" class="mb-3">
                            <div class="section mb-3">
                                <input type="text" class="form-control mb-2" name="section_title[]" placeholder="Título de la sección" required>
                                <input type="url" class="form-control" name="video_url[]" placeholder="URL del video" required>
                            </div>
                        </div>
                        <button type="button" class="btn btn-outline-secondary" onclick="addSection()">Agregar otra sección</button>
                    </div>
                </div>

                <!-- Botón para enviar formulario -->
                <div class="row">
                    <div class="col text-center">
                        <input type="submit" class="btn btn-primary" value="Crear Curso">
                    </div>
                </div>
            </form>
        </div>
    </div>

    <%- include('partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    
    <script>
        // Eliminar las alertas después de 5 segundos
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);

        // Función para agregar más requerimientos
        function addRequirement() {
            const requirementsDiv = document.getElementById('requirements');
            const input = document.createElement('input');
            input.type = 'text';
            input.name = 'requirements[]';
            input.placeholder = 'Agregar requerimiento';
            input.className = 'form-control mb-2';
            requirementsDiv.appendChild(input);
        }

        // Función para agregar más secciones
        function addSection() {
            const sectionsDiv = document.getElementById('sections');
            const sectionDiv = document.createElement('div');
            sectionDiv.className = 'section mb-3';
            sectionDiv.innerHTML = `
                <input type="text" class="form-control mb-2" name="section_title[]" placeholder="Título de la sección" required>
                <input type="url" class="form-control" name="video_url[]" placeholder="URL del video" required>
            `;
            sectionsDiv.appendChild(sectionDiv);
        }
    </script>
</body>
</html>
